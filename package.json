{
  "name": "myranor-game",
  "version": "0.1.0",
  "description": "Myranor Aufbausystem Engine + API",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint && bun run test",
    "start": "bun src/server/index.ts",
    "dev": "bun --watch src/server/index.ts",
    "playtest": "bun src/playtest/index.ts",
    "playtest:mc:strategies": "bun run playtest --scenario core-v1-strategies --runs 500 --rounds 30 --seed 42 --out reports/playtest-core-v1-strategies.json --md-out reports/playtest-core-v1-strategies.md --pretty",
    "playtest:mc:planner-strategies": "bun run playtest --scenario core-v1-planner-strategies --runs 120 --rounds 20 --seed 42 --out reports/playtest-core-v1-planner-strategies.json --md-out reports/playtest-core-v1-planner-strategies.md --pretty",
    "playtest:prompt": "bun src/playtest/analyzePrompt.ts",
    "playtest:prompt:strategies": "bun run playtest:prompt --report reports/playtest-core-v1-strategies.json --out reports/playtest-core-v1-strategies.prompt.md --pretty",
    "llm-play": "bun --env-file .env src/playtest/llm.ts",
    "llm-play-20": "bun run llm-play --rounds 20 --seed 42 --scenario core-v1-all5 --out llm-run.json --pretty",
    "llm-play:strategies": "bun run llm-play --rounds 20 --seed 42 --scenario core-v1-strategies --out reports/llm-core-v1-strategies.json --md-out reports/llm-core-v1-strategies.md --pretty",
    "llm-batch": "bun src/playtest/llmBatch.ts",
    "llm-batch:analyze": "bun src/playtest/analyzeLlmBatch.ts",
    "test": "bun test",
    "lint": "biome lint --vcs-use-ignore-file true --vcs-enabled true --diagnostic-level=error",
    "lint:fix": "biome check --write --unsafe --skip-errors ."
  },
  "dependencies": {
    "@ai-sdk/anthropic": "beta",
    "@ai-sdk/google": "beta",
    "ai": "beta",
    "typescript": "^5.3.0",
    "zod": "^4.0.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.13",
    "@types/node": "^22.10.2",
    "@biomejs/biome": "^1.9.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "game",
    "strategy",
    "myranor",
    "cli",
    "event-sourcing"
  ],
  "author": "",
  "license": "MIT"
}
